{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "quarto: watch",
      "type": "deno",
      "command": "run",
      "args": [
        "--unstable",
        "--importmap=${workspaceFolder}/src/import_map.json",
        "--allow-all",
        "--watch",
        "${workspaceFolder}/src/quarto.ts",
        "preview",
        "${workspaceFolder}/tests/docs/project/site",
        "--no-browser",
        "--no-watch-inputs"
      ],
      "problemMatcher": ["$deno"],
      "env": {
        "QUARTO_BIN_PATH": "${workspaceFolder}/package/dist/bin",
        "QUARTO_SHARE_PATH": "${workspaceFolder}/src/resources"
      }
    }
  ]
}
